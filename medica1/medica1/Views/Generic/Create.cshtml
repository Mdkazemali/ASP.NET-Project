@model medica1.Models.Generic_Name

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Generic Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name"placeholder="Input Name" class="form-control" />
                <span asp-validation-for="Name"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Short_Name"  class="control-label"></label>
                <input asp-for="Short_Name"placeholder="Input Short Name" class="form-control" />
                <span asp-validation-for="Short_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description"placeholder="Write Descriptions" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created_By" class="control-label"></label>
                <input asp-for="Created_By" placeholder="Creator Name" class="form-control" />
                <span asp-validation-for="Created_By" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Change_by" class="control-label"></label>
                <input asp-for="Change_by" placeholder="Editor Name" class="form-control" />
                <span asp-validation-for="Change_by" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> &nbsp;&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>